{
  "name": "bank-ledger-ar",
  "version": "1.0.0",
  "description": "نظام إدارة قيود البنوك (RTL, Vanilla JS, IndexedDB)",
  "author": "",
  "license": "MIT",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "build:exe": "electron-builder --win nsis",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "28.2.5",
    "electron-builder": "24.13.3"
  },
  "build": {
    "appId": "com.example.bankledgerar",
    "productName": "إدارة قيود البنوك",
    "asar": true,
    "files": [
      "index.html",
      "style.css",
      "utils.js",
      "db.js",
      "app.js",
      "charts.js",
      "export.js",
      "assets/**",
      "electron/**"
    ],
    "win": {
      "target": ["nsis"],
      "artifactName": "${productName}-${version}-Setup.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false
    }
  }
}

