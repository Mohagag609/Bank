{
  "$schema": "https://schema.tauri.app/v1/config.json",
  "package": {
    "productName": "إدارة قيود البنوك",
    "version": "1.0.0"
  },
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "devPath": ".",
    "distDir": "."
  },
  "tauri": {
    "allowlist": {
      "shell": { "open": true }
    },
    "windows": [
      {
        "title": "إدارة قيود البنوك",
        "width": 1200,
        "height": 800,
        "resizable": true
      }
    ],
    "bundle": {
      "active": true,
      "targets": ["nsis"],
      "windows": {
        "webviewInstallMode": { "type": "embedBootstrapper" }
      }
    }
  }
}